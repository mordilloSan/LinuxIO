{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    // Use classic JSX runtime (React.createElement)
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "../../frontend",
    "paths": {
      // Point to frontend source for all @/ imports
      "@/api/*": ["src/api/*", "src/api/*.ts", "src/api/*.tsx"],
      "@/components/*": ["src/components/*", "src/components/*.ts", "src/components/*.tsx"],
      "@/contexts/*": ["src/contexts/*", "src/contexts/*.ts", "src/contexts/*.tsx"],
      "@/hooks/*": ["src/hooks/*", "src/hooks/*.ts", "src/hooks/*.tsx"],
      "@/layouts/*": ["src/layouts/*", "src/layouts/*.ts", "src/layouts/*.tsx"],
      "@/pages/*": ["src/pages/*", "src/pages/*.ts", "src/pages/*.tsx"],
      "@/theme/*": ["src/theme/*", "src/theme/*.ts", "src/theme/*.tsx"],
      "@/types/*": ["src/types/*", "src/types/*.ts", "src/types/*.tsx"],
      "@/utils/*": ["src/utils/*", "src/utils/*.ts", "src/utils/*.tsx"],
      "@/assets/*": ["src/assets/*", "src/assets/*.ts", "src/assets/*.tsx"],
      "@/services/*": ["src/services/*", "src/services/*.ts", "src/services/*.tsx"],
      // Specific files
      "@/constants": ["src/theme/constants", "src/theme/constants.ts"],
      "@/config": ["src/config", "src/config.ts"],
      "@/theme": ["src/theme/index", "src/theme/index.ts"],
      "@/routes": ["src/routes", "src/routes.tsx"]
    }
  },
  "include": [
    "./src/**/*",
    "../../frontend/src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
